init_watchdog_start()
{
	if [ -f /var/run/watchdog.pid ]; then
		return 0
	fi

	local WATCHDOG_CONF_REBOOT='60'
	local WATCHDOG_CONF_RESET='30'
	local WATCHDOG_CONF_DEVICE='/dev/watchdog'

	if [ -s /etc/watchdog.daemon.conf ]; then
		. /etc/watchdog.daemon.conf 2>/dev/null || true
	fi

	if [ ! -c "$WATCHDOG_CONF_DEVICE" ]; then
		return 0
	fi
	
	taskset 0x00000001 start-stop-daemon --start --quiet --exec watchdog --pidfile /var/run/watchdog.pid --user watchdog --chuid watchdog:watchdog  -- -T $WATCHDOG_CONF_REBOOT -t $WATCHDOG_CONF_RESET "$WATCHDOG_CONF_DEVICE"
}

init_watchdog_stop()
{
	start-stop-daemon --stop --quiet --exec watchdog --pidfile /var/run/watchdog.pid
	rm -rf /var/run/watchdog.pid
}

init_watchdog_main()
{
	if [ "$#" -eq 0 ]; then
		local action='status'
	else
		local action="$1"
		shift 1
	fi
	
	case "$action" in
		
		start)
			init_watchdog_start "$@"
		;;
		
		stop)
			init_watchdog_stop "$@"
		;;
		
	esac
}

init_watchdog_main "$@"
